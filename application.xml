<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<meta title="Woolli" package="com.blazingmammothgames.woolli" version="1.0.0" company="Blazing Mammoth Games" />
	
	<!-- output -->
	<app main="com.blazingmammothgames.woolli.Main" file="Woolli" path="bin" />
	
	<window background="#000000" fps="60" />
	<window width="960" height="540" unless="mobile" />
	<window orientation="landscape" />
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<haxelib name="openfl" />
	<haxelib name="actuate" />
	<haxelib name="buddy" />
	
	<!-- assets -->
	<icon path="assets/blazingmammothgames_16px.png" size="16" />
	<icon path="assets/blazingmammothgames_136px.png" size="136" />
	<assets path="assets" />
	
	<!-- optimize output
	<haxeflag name="-dce full" /> -->
	
	<!-- disable the splash screen -->
	<!-- <haxedef name="disableSplash" /> -->
	
	<!-- enable profiling -->
	<!--haxedef name="profiling" /-->
	
	<!-- enable debug draw -->
	<haxedef name="debugdraw" />
	
</project>